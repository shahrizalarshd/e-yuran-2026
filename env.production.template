# ============================================
# E-YURAN PPTT - PRODUCTION ENVIRONMENT
# Taman Tropika Kajang
# ============================================

# Application
APP_NAME="e-Yuran PPTT"
APP_ENV=production
APP_KEY=base64:GENERATE_THIS_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://eyuran.yourdomain.com

# Logging
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=e_yuran_pptt
DB_USERNAME=eyuran_user
DB_PASSWORD=YOUR_STRONG_DATABASE_PASSWORD_HERE

# Broadcasting
BROADCAST_DRIVER=log

# Cache
CACHE_DRIVER=file
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=database

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Memory Limit
MEMORY_LIMIT=512M

# ============================================
# PAYMENT GATEWAY - TOYYIBPAY (PRODUCTION)
# ============================================
TOYYIBPAY_SECRET_KEY=your_production_secret_key_here
TOYYIBPAY_CATEGORY_CODE=your_category_code_here
TOYYIBPAY_SANDBOX=false

# ToyyibPay URLs (Production)
TOYYIBPAY_API_URL=https://toyyibpay.com/index.php/api
TOYYIBPAY_PAYMENT_URL=https://toyyibpay.com

# Callback URLs
TOYYIBPAY_CALLBACK_URL=https://eyuran.yourdomain.com/payment/callback
TOYYIBPAY_RETURN_URL=https://eyuran.yourdomain.com/payment/callback

# ============================================
# TELEGRAM NOTIFICATIONS (OPTIONAL)
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ERROR_NOTIFICATION=true

# ============================================
# MAIL CONFIGURATION (OPTIONAL)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@eyuran.yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# SECURITY
# ============================================
# Session security
SANCTUM_STATEFUL_DOMAINS=eyuran.yourdomain.com

# CORS
CORS_ALLOWED_ORIGINS=https://eyuran.yourdomain.com

# ============================================
# OPTIMIZATION
# ============================================
# Set to true for better performance
CACHE_CONFIG=true
CACHE_ROUTES=true
CACHE_VIEWS=true

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry (optional)
# SENTRY_LARAVEL_DSN=your_sentry_dsn_here
# SENTRY_TRACES_SAMPLE_RATE=0.2

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_TIME=02:00

# ============================================
# NOTES FOR PRODUCTION
# ============================================
#
# 1. Copy this file to .env on server: cp env.production.template .env
# 2. Generate APP_KEY: php artisan key:generate
# 3. Use strong passwords (min 16 characters)
# 4. Set APP_DEBUG=false
# 5. Configure proper database credentials
# 6. Use ToyyibPay production credentials
# 7. Setup SSL certificate for HTTPS
# 8. Configure firewall (UFW)
# 9. Setup automatic backups
# 10. Enable error notifications (Telegram/Email)
#
# ============================================



